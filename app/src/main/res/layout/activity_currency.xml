<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    tools:context="com.example.minhanh.converter.Currency">

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/darkBlue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currency Converter"
        android:gravity="center"
        android:textSize="22sp"/>
    <EditText
        android:id="@+id/etInputCurrency"
        android:background="@android:color/transparent"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter value "
        android:gravity="center"/>

    <Button
        android:id="@+id/btnVNDtoCAD"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@color/blue"
        android:text="Vietnam to Canada " />
    <Button
        android:id="@+id/btnCADtoVND"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@color/blue"
        android:text="Canada to Vietnam" />
    <Button
        android:id="@+id/btnVNDtoUSD"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@color/blue"
        android:text="Vietnam to US" />
    <Button
        android:id="@+id/btnUSDtoVND"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@color/blue"
        android:text="US to Vietnam" />

    <TextView
        android:id="@+id/tvOutputCurrency"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

</LinearLayout>
